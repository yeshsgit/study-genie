{
    "manifest_version": 3,
    "name": "Study Genie",
    "version": "1.0.0",
    "description": "Study tool that promotes study efficiency and provides access to advanced learning tools.",
    "icons": {
        "16": "images/full-res-icon.png",
        "48": "images/full-res-icon.png",
        "128": "images/full-res-icon.png"
    },
    "action": {
        "default_icon": "images/full-res-icon.png",
        "default_title": "Study Genie",
        "default_popup": "ui/popup.html"
    },
    "permissions": ["alarms", "notifications", "storage"],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    }
}